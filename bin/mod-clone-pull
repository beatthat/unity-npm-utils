#!/usr/bin/env node
"use strict";
const path = require('path');
const fs = require('fs');
const thisDir = __dirname; 
const unpm = require(path.join(__dirname, '..', 'lib', 'unity-npm-utils.js'));

if(process.argv.length < 3) {
    console.log('usage: mod-clone-pull package_name');
    process.exit(1);
}

const pkgPath = process.argv[2];
const pkgModuleRoot = path.join(__dirname, '..', '..', pkgPath);


unpm.modCloneOrPull(pkgModuleRoot)
.then((updateWCres) => {
    console.log('mod-clone-pull succeeded!');
})
.catch((err) => {
    console.log('failed with err: %j', err);
});
