#!/usr/bin/env node

"use strict";
const path = require('path');
const fs = require('fs');
const thisDir = __dirname; //path.join(path.dirname(fs.realpathSync(__filename)));
// const lib = path.join(path.dirname(fs.realpathSync(__filename)), '../lib');
const unpm = require(path.join(thisDir, '..', 'lib', 'unity-npm-utils.js'));

if(process.argv.length < 3) {
    console.log('usage: mod-local-overwrite package_name');
    process.exit(1);
}

const pkgPath = process.argv[2];
const pkgParts = pkgPath.split('/');

const unityRoot = path.join(thisDir, '..', '..', '..')

const pkgModuleRoot = path.join(thisDir, '..', '..', pkgParts[pkgParts.length - 1]);

const options = {
    package_name: pkgParts[pkgParts.length - 1],
    package_scope: pkgParts.length > 1? pkgParts[0]: undefined
}

console.log('unpm.syncPlugin2Src(%j, %j, %j)', unityRoot, pkgModuleRoot, options);
