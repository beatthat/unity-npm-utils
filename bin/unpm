#!/usr/bin/env node

"use strict";

console.log('inside bin/unpm...');

const program = require('commander');

program
  .version('0.0.1')
  .description('utils for using npm as a Unity package manager')
  .command('init-package', 'install the template for a new unity package').alias('ip')
  .command('update-package-template', 'update the scripts and template files for an existing package').alias('upt')
  .parse(process.argv);
