{
    "name": "unity-npm-utils",
    "scope": "ape",
    "version": "0.0.42",
    "description": "utils for using npm as a package manager for unity",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/beatthat/unity-npm-utils.git"
    },
    "main": "./lib/unity-npm-utils",
    "bin": {
        "unity2clone-overwrite": "./bin/unity2clone-overwrite",
        "unity2pkg-overwrite": "./bin/unity2pkg-overwrite",
        "mod-clone-pull": "./bin/mod-clone-pull",
        "mod-clone-link": "./bin/mod-clone-link"
    },
    "files": [
        "lib",
        "bin"
    ],
    "author": "larrykirschner@gmail.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/beatthat/unity-npm-utils/issues"
    },
    "homepage": "https://github.com/beatthat/unity-npm-utils",
    "scripts": {
        "test": "./node_modules/.bin/mocha --recursive --reporter spec",
        "pretest:unityproject:install": "rm -f *.tgz",
        "test:unityproject:install": "npm pack && cp ${npm_package_name}-${npm_package_version}.tgz ${npm_package_name}-latest.tgz && cd test_unity_project && npm run clean && npm install",
        "clean": "rm -f *.tgz && cd test && npm run clean",
        "pub:tag": "git add -A && git commit -m ${npm_package_version} && git tag -a ${npm_package_version} -m ${npm_package_version} && git push origin master && git push origin ${npm_package_version}"
    },
    "dependencies": {
        "child-process": "^1.0.2",
        "fs-extra-promise": "^1.0.1",
        "git-clone-or-pull": "^3.1.0",
        "home-or-tmp": "^3.0.0",
        "mkdirp": "^0.5.1",
        "ncp": "^2.0.0",
        "nodegit": "0.20.2",
        "request": "^2.82.0",
        "rimraf": "^2.6.2",
        "semver": "^5.4.1",
        "tmp": "0.0.33",
        "unzip": "^0.1.11"
    },
    "engines": {
        "node": "*"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "mocha": "^3.5.3",
        "mocha-logger": "^1.0.5"
    }
}
